
@using PagedList;
@using PagedList.Mvc;


@model IPagedList<MyBlogSiteMVC.Models.Blog>
@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class=" header-text">
    <div class="container-fluid">
        <div class="owl-banner owl-carousel">
            @foreach (var item in Model)
            {
                <div class="item">



                    <img src="@item.Foto" alt="">
                    <div class="item-content">
                        <div class="main-content">

                            <a href="/Blog/BlogDetay/@item.BlogID"><h4>@item.BlogBaslik</h4></a>
                            <ul class="post-info">

                                <li><a href="#">Tarih: @item.BlogTarih</a></li>
                                <li><a href="#">Okuyan Kişi Sayısı: @item.BlogOkunmaSayisi</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>







<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">

                <div class="all-blog-posts">
                    <div class="row">

                        @foreach (var item in Model)
                        {

                            <div class="col-lg-12">
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <img src="@item.Foto" alt="">
                                    </div>
                                    <div class="down-content">

                                        <a href="/Blog/BlogDetay/@item.BlogID"><h4>@item.BlogBaslik</h4></a>
                                        <ul class="post-info">

                                            <li><a href="#">Tarih: @item.BlogTarih</a></li>
                                            <li><a href="#">Okuyan Kişi Sayısı: @item.BlogOkunmaSayisi</a></li>
                                        </ul>
                                        <p>
                                            @if (item.BlogIcerik.Length > 300)
                                            {

                                                @Html.Raw(item.BlogIcerik.Substring(0, 300));


                                            }
                                            else
                                            {

                                                @Html.Raw(item.BlogIcerik)

                                            }
                                        </p>
                                        <div class="col-lg-12">
                                            <div class="main-button">
                                                <a href="/Blog/BlogDetay/@item.BlogID">Devamını Oku</a>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>


                        }

                    </div>

                </div>
                <div class="col-lg-12">
                    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
                    <div class="main-button">
                        <a href="/Blog/Index">Blog Yazıları İçin Tıklayınız...</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="sidebar-item recent-posts">
                                <div class="sidebar-heading">
                                    <h2>En Çok Okunan Blog Yazıları</h2>
                                </div>


                                @foreach (var item in Model)
                                {


                                    if (item.BlogOkunmaSayisi.Value > 10)
                                    {
                                        <div class="content">
                                            <ul>
                                                <li>
                                                    <a href="/Blog/BlogDetay/@item.BlogID">
                                                        <h5>@item.BlogBaslik</h5>
                                                        <span>Yayınlanma Tarihi: @item.BlogTarih</span>
                                                        <span>Blog Okunma Sayısı: @item.BlogOkunmaSayisi</span>
                                                    </a>
                                                </li>

                                            </ul>
                                        </div>
                                    }


                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>




        </div>

    </div>
</section>













